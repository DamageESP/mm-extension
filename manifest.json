{
  "manifest_version": 2,
  "name": "Mega MegaMagnate",
  "short_name": "MegaMM",
  "description": "Esta extensi√≥n proporciona distintas herramientas para mejorar la experiencia de juego en MegaMagnate.",
  "homepage_url": "https://github.com/NiciusB/MegaMegamagnate",
  "version": "1.6",
  "icons": {
    "48": "icon.png"
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Mega MegaMagnate",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "defaultSettings.js",
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "https://www.megamagnate.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.megamagnate.net/*"
      ],
      "js": [
        "defaultSettings.js",
        "content-patcher.js"
      ],
      "run_at": "document_end"
    }
  ]
}