{
  "manifest_version": 3,
  "name": "Mega MegaMagnate",
  "short_name": "MegaMM",
  "description": "Esta extensi√≥n proporciona distintas herramientas para mejorar la experiencia de juego en MegaMagnate.",
  "version": "1.1",
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Mega MegaMagnate",
    "default_popup": "mm-index.html"
  },
  "permissions": [
    "storage",
    "https://www.megamagnate.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.megamagnate.net/*"
      ],
      "js": [
        "content-patcher.js"
      ],
      "run_at": "document_end"
    }
  ]
}